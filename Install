echo "0. Iɴsᴛᴀʟʟ"
echo "1. Uᴘᴅᴀᴛᴇ"
echo "2. UɴIɴsᴛᴀʟʟ"
echo ""
read option

case $option in

  0)
    echo "Installing..."
    mkdir $HOME/.config/bash
    cp -r src/* $HOME/.config/bash
    echo "source $HOME/.config/bash/init.sh" >> $HOME/.bashrc
    echo "Done"
    ;;
  1)
    echo "Soon."
    sleep 0.2
    echo "Soon.."
    sleep 0.2
    echo "Soon..."
    ;;
  2)
    echo "Soon."
    sleep 0.2
    echo "Soon.."
    sleep 0.2
    echo "Soon..."
    ;;
  q)
    ;;
  *)
    echo "Invalid option"
    ;;
esac
                                                                                
                                                                                
                                                                               